{
  "version": 3,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Config",
      "description": "Default debug build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        },
        "VCPKG_MANIFEST_FEATURES": "tests",
        "DOTTORRENT_BUILD_TESTS": true,
        "DOTTORRENT_BUILD_DOCS": true
      }
    },
    {
      "name": "debug-isal",
      "displayName": "Debug Config (ISA-L)",
      "description": "Default debug build using Ninja generator and ISA-L support",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug-isal",
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        },
        "VCPKG_MANIFEST_FEATURES": "tests;isal",
        "DOTTORRENT_BUILD_TESTS": true,
        "DOTTORRENT_BUILD_DOCS": true,
        "DOTTORRENT_MB_CRYPTO_LIB": "isal"
      }
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "description": "Default debug build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release",
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        },
        "VCPKG_MANIFEST_FEATURES": "tests",
        "DOTTORRENT_BUILD_TESTS": true,
        "DOTTORRENT_BUILD_DOCS": true
      }
    },
    {
      "name": "release-isal",
      "displayName": "Release Config (ISA-L)",
      "description": "Default debug build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release-isal",
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        },
        "VCPKG_MANIFEST_FEATURES": "tests;isal",
        "DOTTORRENT_BUILD_TESTS": true,
        "DOTTORRENT_BUILD_DOCS": true
      }
    }
  ]
}